@model TesteDengine.Application.Services.DTOs.FaturaDTO

@{
    ViewData["Title"] = "Excluir Fatura";
}

<h1>Confirmar Exclusão</h1>

<h3>Você tem certeza que deseja excluir esta fatura?</h3>

<dl class="row">
    <dt class="col-sm-2">Cliente</dt>
    <dd class="col-sm-10">@Model.Cliente?.Nome</dd>

    <dt class="col-sm-2">Data</dt>
    <dd class="col-sm-10">@Model.Data.ToShortDateString()</dd>

    <dt class="col-sm-2">Total</dt>
    <dd class="col-sm-10">@Model.Total.ToString("C")</dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="FaturaId" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
